<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_outra_tela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.imnotvirus.meuprimeiroapp.ContaPassosActivity">

    <TextView
        android:text="@string/ContaPassos_txt_topo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ContaPassos_txt_topo"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/ContaPassos_txt_contador"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <TextView
        android:text="@string/ContaPassos_number_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ContaPassos_txt_contador"
        android:textSize="72sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:text="@string/ContaPassos_action_diminuir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContaPassos_btn_diminuir"
        android:layout_below="@+id/ContaPassos_btn_aumentar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/ContaPassos_action_zerar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContaPassos_btn_zerar"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/ContaPassos_action_aumentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContaPassos_btn_aumentar"
        android:layout_below="@+id/ContaPassos_txt_contador"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

</RelativeLayout>
